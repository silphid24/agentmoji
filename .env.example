# Application
DEBUG=false
PORT=8100

# Database
DATABASE_URL=postgresql://user:pass@localhost/moji
REDIS_URL=redis://localhost:6379

# LLM Configuration
LLM_PROVIDER=deepseek
LLM_MODEL=deepseek-r1
LLM_API_KEY=your-api-key-here
# LLM_API_BASE=https://api.deepseek.com  # Optional - auto-detected

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Platform Adapters (optional)
# SLACK_BOT_TOKEN=xoxb-...
# SLACK_APP_TOKEN=xapp-...
# TEAMS_APP_ID=...
# TEAMS_APP_PASSWORD=...
# DISCORD_TOKEN=...
# KAKAO_REST_API_KEY=...

# Example for different LLM providers:
# OpenAI
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-3.5-turbo
# LLM_API_KEY=your-openai-api-key

# Anthropic
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-sonnet-20240229
# LLM_API_KEY=your-anthropic-api-key

# Custom endpoint (e.g., local LLMs, Ollama, etc.)
# LLM_PROVIDER=custom
# LLM_MODEL=llama-3
# LLM_API_BASE=http://localhost:11434/v1
# LLM_API_KEY=optional-api-key

# Workstation LLM Server
# LLM_PROVIDER=custom
# LLM_MODEL=your-model-name
# LLM_API_BASE=http://192.168.0.7:5000/v1
# LLM_API_KEY=your-api-key-if-needed